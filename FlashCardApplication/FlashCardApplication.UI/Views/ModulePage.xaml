                                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding Description, StringFormat='Description: {0}'}" TextColor="White"  FontSize="Title" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <ContentView>
                                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
